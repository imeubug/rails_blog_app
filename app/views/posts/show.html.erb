<div id="show-page">
  <div class="p-title">
    <%= @post.title %>
  </div>

  <div id="tag-wrapper">
    <% @post.tags.each do |tag| %>
      <span class="tag">
        <%= link_to tag.name, tag_path(tag) %>
      </span>
    <% end %>
  </div>

  <div class="p-date">
    <span class="p-d-month"> <%= @post.created_at.strftime("%B")%> </span>
    <span class="p-d-day"> <%= @post.created_at.day%> </span>, 
    <span class="p-d-year"> <%= @post.created_at.year%> </span>
  </div>

  <div class="divider"></div>

  <div class="p-body">
    <pre><%= @post.body %></pre>
  </div>

  <div class="divider"></div>

  <div class="comment-body">
    <h3>Comments (<%= @post.comments.size %>)</h3>
    <%= render partial: 'posts/comment', collection: @post.comments %>
  </div>

  <%= render partial: 'comments/form' %>

  <div class="divider"></div>

  <footer>
    <div>
      <p>
      <%= link_to "Edit", edit_post_path(@post) %> 
      <%= link_to "Delete", post_path(@post), data: {confirm: 'delete the post?'}, method: :delete %>
      </p>
    </div>

    <div>
      <%= link_to "Go back", posts_path %>
    </div>
  </footer>
</div>
